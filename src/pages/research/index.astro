---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { dateRange } from "@lib/utils";
import { RESEARCH } from "@consts";

const news = [
  { date: "2024-08-25", text: "ðŸš€ My new article is published in the Astrophysical Journal!" },
  { date: "2024-06-15", text: "ðŸŒŒ I presented my latest research at the International Astronomy Conference." },
  // Add more news items here
];

const collection = (await getCollection("research"))
  .sort((a, b) => new Date(b.data.publicationDate).valueOf() - new Date(a.data.publicationDate).valueOf());

const research = await Promise.all(
  collection.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);
---

<PageLayout title={RESEARCH.TITLE} description={RESEARCH.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <!-- News Section -->
      <div class="space-y-4">
        <div class="font-semibold text-black dark:text-white text-lg">
          Latest News
        </div>
        <ul class="list-disc space-y-2">
          {
            news.map((item) => (
              <li class="text-sm">
                <span class="font-semibold">{item.date}</span> - {item.text}
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Research Publications Section -->
      <div class="font-semibold text-black dark:text-white">
        Research Publications
      </div>
      <ul class="flex flex-col space-y-4">
        { 
          research.map(entry => (
            <li class="animate">
                <a href={entry.data.link} target="_blank" class="underline hover:text-blue-600">
                  {entry.data.title}
                </a>
              <div class="text-sm opacity-75">
                {entry.data.journal}, {dateRange(entry.data.publicationDate)}
              </div>
              <div class="text-sm opacity-75">
                {entry.data.authors.join(", ")}
              </div>
              <article class="mt-2">
                <entry.Content />
              </article>
            </li>
          ))
        }
      </ul>
    </div>
  </Container>
</PageLayout>
